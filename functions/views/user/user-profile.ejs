<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../layouts/header-layout');%>
</head>

<body>
    <div class="page-wrapper">
        <!-- HEADER MOBILE-->
        <header class="header-mobile d-block d-lg-none">
            <%- include('../layouts/nav-mobile-layout');%>
        </header>
        <!-- END HEADER MOBILE-->

        <!-- MENU SIDEBAR-->
        <aside class="menu-sidebar d-none d-lg-block">

            <%- include('../layouts/nav-sidebar-layout');%>
        </aside>
        <!-- END MENU SIDEBAR-->

        <!-- PAGE CONTAINER-->
        <div class="page-container">
            <!-- HEADER DESKTOP-->
            <header class="header-desktop">
                <div class="section__content section__content--p30">
                    <%- include('../layouts/header-desktop-layout');%>
                </div>
            </header>
            <!-- END HEADER DESKTOP-->

            <!-- MAIN CONTENT-->
            <div class="main-content">
                <div class="container section__content--p30">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-lg-12 ">
                                <!-- USER DATA-->
                                <div class="user-data m-b-30">
                                    <h3 class="title-3 m-b-30">
                                        <i></i>Update your info</h3>
                                    <div class="adduser-responsive m-b-30">
                                        <form role="form" id="formUpdateUserInfo">
                                            <div class="form-group">
                                                <label for="fName">First Name</label>
                                                <input type="text" class="form-control" id="updateFName" name="updateFName" value="" placeholder="First Name">
                                            </div>
                                            <div class="form-group">
                                                <label for="lName">Last Name</label>
                                                <input type="text" class="form-control" id="updateLName" name="updateLName" value="" placeholder="Last Name">
                                            </div>
                                            <div class="form-group">
                                                <label for="mobileNo">Mobile Number</label>
                                                <input type="text" class="form-control" id="updateMobileNo" name="updateMobileNo" value="" placeholder="Mobile Number">
                                            </div>
                                            <div class="form-group">
                                                <label for="address">Address</label>
                                                <input type="text" class="form-control" id="updateAddress" name="updateAddress" value="" placeholder="Address">
                                            </div>
                                            <div class="form-group">
                                                <label for="userBloodGroup"> Blood Group</label>
                                                <select class="form-control form-control-lg required " name="userBloodGroupUpdate" id="userBloodGroupUpdate" style="font-size: medium;">
                                                    <option value="">None</option>
                                                    <option value="A+">A+</option>
                                                    <option value="O+">O+</option>
                                                    <option value="B+">B+</option>
                                                    <option value="AB+">AB+</option>
                                                    <option value="A-">A-</option>
                                                    <option value="O-">O-</option>
                                                    <option value="B-">B-</option>
                                                    <option value="AB-">AB-</option>
                                                </select>
                                            </div>
                                            <div class="modal-footer">
                                                <!-- <button type="button" class="btn btn-danger btn-default " data-dismiss="modal" id="btnClear"><span class="glyphicon glyphicon-remove"></span> Cancel</button> -->
                                                <button type="button" class="btn btn-success btn-default" id="btnSaveChanges">Save Changes</button>
                                                <!--stop the retrograding by changing the type submit to button-->
                                            </div>
                                        </form>

                                    </div>
                                    <!-- END USER DATA-->
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 ">
                                <!-- USER DATA-->
                                <div class="user-data m-b-30">
                                    <h3 class="title-3 m-b-30">
                                        <i class=""></i>Change Your Email</h3>
                                    <div class="adduser-responsive m-b-30">
                                        <form role="form" id="formUpdateUserEmail">
                                            <div class="form-group">
                                                <label for="email"><span class="glyphicon glyphicon-user"></span> New Email Address</label>
                                                <input type="text" class="form-control" id="newEmailAdd" name="newEmailAdd" value="" placeholder="">
                                            </div>
                                            <div class="form-group">
                                                <label for="confirmEmail"><span class="glyphicon glyphicon-user"></span> Confirm new email address</label>
                                                <input type="text" class="form-control" id="confirmNewEmailAdd" name="confirmNewEmailAdd" value="" placeholder="">
                                            </div>
                                            <div class="form-group">
                                                <label for="psw"><span class="glyphicon glyphicon-eye-open"></span> Current Password</label>
                                                <input type="password" class="form-control" id="getCurrentPassword" name="getCurrentPassword" value="" placeholder="Enter your password">
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-danger btn-default " data-dismiss="modal" id="btnEmailClear"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
                                                <button type="button" class="btn btn-success btn-default" id="btnEmailUpdate">Update Email</button>
                                                <!--stop the retrograding by changing the type submit to button-->
                                            </div>
                                        </form>

                                    </div>
                                    <!-- END USER DATA-->
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 ">
                                <!-- USER DATA-->
                                <div class="user-data m-b-30">
                                    <h3 class="title-3 m-b-30">
                                        <i class=""></i>Change Your Password</h3>
                                    <div class="adduser-responsive m-b-30">
                                        <form role="form" id="formUpdateUserPwd">

                                            <div class="form-group">
                                                <label for="psw"><span class="glyphicon glyphicon-eye-open"></span> Current Password</label>
                                                <input type="password" class="form-control" id="CurrentPassword" name="CurrentPassword" value="" placeholder="Enter password">
                                            </div>
                                            <div class="form-group">
                                                <label for="confirmPsw"><span class="glyphicon glyphicon-eye-open"></span> New Password</label>
                                                <input type="password" class="form-control" id="newPassword" name="newPassword" value="" placeholder="Enter a new password">
                                            </div>

                                            <div class="form-group">
                                                <label for="confirmPsw"><span class="glyphicon glyphicon-eye-open"></span> Confrim New Password</label>
                                                <input type="password" class="form-control" id="confirmNewPassword" name="confirmNewPassword" value="" placeholder="re-enter password">
                                            </div>


                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-danger btn-default " data-dismiss="modal" id="btnPwdClear"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
                                                <button type="button" class="btn btn-success btn-default" id="btnPwdUpdate">Update Password</button>
                                                <!--stop the retrograding by changing the type submit to button-->
                                            </div>
                                        </form>

                                    </div>
                                    <!-- END USER DATA-->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <%-include('../layouts/footer-layout');-%>
            <script src="../js/user-profie.js "></script>

</body>

</html>