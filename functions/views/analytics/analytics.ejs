<!DOCTYPE html>
<html lang="en">
   <head>
      <%- include('../layouts/header-layout');%>
   </head>

   <body>
      <div class="page-wrapper">
         <!-- HEADER MOBILE-->
         <header class="header-mobile d-block d-lg-none">
            <%- include('../layouts/nav-mobile-layout');%>
         </header>
         <!-- END HEADER MOBILE-->

         <!-- MENU SIDEBAR-->
         <aside class="menu-sidebar d-none d-lg-block">
            <%- include('../layouts/nav-sidebar-layout');%>
         </aside>
         <!-- END MENU SIDEBAR-->

         <!-- PAGE CONTAINER-->
         <div class="page-container">
            <!-- HEADER DESKTOP-->
            <header class="header-desktop">
               <div class="section__content section__content--p30">
                  <%- include('../layouts/header-desktop-layout');%>
               </div>
            </header>
            <!-- END HEADER DESKTOP-->

            <!-- MAIN CONTENT-->
            <div class="main-content">
               <div class="container section__content--p30">
                  <div class="container-fluid">
                     <div class="row">
                        <div class="col-lg-12">
                           <!-- USER DATA-->
                           <div class="user-data m-b-30">
                              <h3 class="title-3 m-b-30">
                                 <i class="zmdi zmdi-chart"></i>System Analytics
                              </h3>

                              <div class="addUser-responsive m-b-30">
                                 <!-- END USER DATA-->
                                 <h5>Blood Groups</h5>
                                 <canvas id="bloodGroupChart"></canvas>
                                 <script src="../js/analytics/bloodGroupChart.js"></script>
                              </div>

                              <div class="container-fluid">
                                 <div class="row m-b-30">
                                    <div class="col-lg-4">
                                       <div
                                          class="card bg-light mb-4"
                                          style="max-width: 25rem"
                                       >
                                          <div class="card-body text-center">
                                             <h1
                                                class="font-weight-bold text-warning"
                                                class="card-title"
                                                id="totalUsers"
                                             ></h1>
                                             <h6
                                                class="font-weight-bold"
                                                class="card-title"
                                             >
                                                Total Users
                                             </h6>
                                          </div>
                                       </div>
                                    </div>
                                    <div class="col-lg-4">
                                       <div
                                          class="card bg-light mb-4"
                                          style="max-width: 25rem"
                                       >
                                          <div class="card-body text-center">
                                             <h1
                                                class="font-weight-bold text-warning"
                                                class="card-title"
                                                id="totalCampaigns"
                                             ></h1>
                                             <h6
                                                class="font-weight-bold"
                                                class="card-title"
                                             >
                                                Total Campaigns
                                             </h6>
                                          </div>
                                       </div>
                                    </div>
                                    <div class="col-lg-4">
                                       <div
                                          class="card bg-light mb-4"
                                          style="max-width: 25rem"
                                       >
                                          <div class="card-body text-center">
                                             <h1
                                                class="font-weight-bold text-warning"
                                                class="card-title"
                                                id="totalBloodRequests"
                                             ></h1>
                                             <h6
                                                class="font-weight-bold"
                                                class="card-title"
                                             >
                                                Total Blood Requests
                                             </h6>
                                          </div>
                                       </div>
                                    </div>
                                 </div>
                                 <div class="container-fluid">
                                    <div class="row m-b-30">
                                       <div></div>
                                       <div class="col-lg-7">
                                          <h5>Age</h5>
                                          <div>
                                             <canvas
                                                id="ageGroupChart"
                                             ></canvas>
                                             <script src="../js/analytics/ageGroupChart.js"></script>
                                          </div>
                                       </div>
                                       <div class="col-lg-5">
                                          <h5>Gender</h5>
                                          <canvas id="genderChart"></canvas>
                                          <script src="../js/analytics/genderChart.js"></script>
                                       </div>
                                    </div>
                                 </div>
                                 <div class="container-fluid">
                                    <div class="row m-b-30">
                                       <div></div>
                                       <div class="col-lg-6">
                                          <h5>Active Vs Disabled Users</h5>
                                          <div></div>
                                          <canvas
                                             id="activeVsDisabledUsers"
                                          ></canvas>
                                          <script src="../js/analytics/activeVsDisabledChart.js"></script>
                                       </div>
                                       <div class="col-lg-6">
                                          <div class="card mb-3">
                                             <div
                                                class="card-header bg-transparent font-weight-bold"
                                             >
                                                Events Districts
                                             </div>
                                             <div
                                                class="card-body"
                                                id="districtsList"
                                                style="
                                                   max-height: 300px;
                                                   margin-bottom: 10px;
                                                   overflow: scroll;
                                                "
                                             >
                                                <script src="../js/analytics/districtList.js"></script>
                                             </div>
                                          </div>
                                       </div>
                                    </div>
                                 </div>
                              </div>
                           </div>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </div>
      <script src="../js/analytics/userInteractivityChart.js"></script>
      <%-include('../layouts/footer-layout');-%>
   </body>
</html>
